<?xml version="1.0" encoding="UTF-8"?>
<vbox styleName="background" style="margin: 0px; padding: 0px;" width="100%" height="100%">
    <style>
        .background {
            background-color: $background
        }
        .tabview {
            margin: 0px;
            padding: 0px;
        }
        .tabview > .box {
            background-color: $background;
            border: none;
        }
        .tabbar {
            border-bottom-width: 4px;
            border-bottom-color: darken($highlight, 50);
        }
        .tabbar .tabbar-button {
            border: none;
            background-color: darken(#ffffff, 15);
            border-bottom-width: 4px;
            border-bottom-color: darken($highlight, 15);
            color: darken($highlight, 15);
        }
        .tabbar-button-selected {
            border-top: 2px solid $primary;
            background-color: #ffffff;
            border-bottom-color: $primary;
            color: $primary;
        }
    </style>
    <tabview width="100%" height="100%">
        <box text="View" width="100%" height="100%" id="viewdata">

        </box>
        <box text="Manage" width="100%" height="100%">

        </box>
    </tabview>
</vbox>